#!/bin/bash 

# debirf plugin: install-kernel
# install a kernel package, indicated by the expected environment
# variables:
#  DEBIRF_PATH
#  DEBIRF_ROOT
#  DEBIRF_KERNEL_PACKAGE
#
# The debirf scripts were written by
# Jameson Rollins <jrollins@fifthhorseman.net>
# and
# Daniel Kahn Gillmor <dkg-debian.org@fifthhorseman.net>.
#
# They are Copyright 2007, and are all released under the GPL,
# version 3 or later.

if [ -f "$DEBIRF_KERNEL_PACKAGE" ] ; then
    # install kernel deb if given at command line
    cp "$DEBIRF_KERNEL_PACKAGE" "$DEBIRF_ROOT"/var/cache/apt/archives/
else
    # otherwise, try to figure out the kernel to install
    # assume arch of build host
    KERNEL_ARCH=$(uname -r | cut -f 3 -d '-')
    debirf_exec aptitude install --download-only linux-image-2.6-"$KERNEL_ARCH"
fi

KNAME=$(basename "$DEBIRF_ROOT"/var/cache/apt/archives/linux-image-*)

echo "extracting kernel package $KNAME..."
debirf_exec dpkg --extract /var/cache/apt/archives/"$KNAME" /

# install the module init tools, since they are needed for depmod
debirf_exec apt-get --assume-yes install module-init-tools

# depmod to create module list
KERNEL_VERS=$(ls -1 "$DEBIRF_ROOT/lib/modules" | head -n1)
echo "generating modules.dep..."
debirf_exec depmod -a "$KERNEL_VERS"

# extract kernel and debian stock initrd:
mv "$DEBIRF_ROOT"/boot/vmlinu* "$DEBIRF_BUILDD"

# remove kernel symlinks
if [ -L "$DEBIRF_ROOT"/vmlinuz ] ; then
    rm "$DEBIRF_BUILDD"/vmlinuz
fi
